#include<16f877.h>

#use delay(clock = 4000000)

#use fast_io(a)
#use fast_io(b)
#use fast_io(d)

#define use_portb_lcd TRUE
#include<lcd.c>

#define buton_ileri pin_a0
#define buton_geri pin_a1

unsigned int8 ADIM=1; // Step motorun adýmýný 1 den baþlatýyoruz.
char durum;

void main(){
setup_psp(PSP_DISABLED);
setup_timer_1(T1_DISABLED);
setup_timer_2(T2_DISABLED,0,1);
setup_adc_ports(NO_ANALOGS);
setup_adc(ADC_OFF);
setup_ccp1(CCP_OFF);
setup_ccp2(CCP_OFF);

set_tris_a(0x03);
set_tris_b(0x00);
set_tris_c(0x00);

output_b(0x00);
output_d(0x00);

lcd_init();
delay_ms(10);

while(true){

switch(ADIM){

case 1:
 output_d(0b00000001);
 break;

case 2:
 output_d(0b00000011);
 break;
 
case 3:
 output_d(0b00000010);
 break;
 
case 4:
 output_d(0b00000110);
 break;
 
case 5:
 output_d(0b00000100);
 break;
 
case 6:
 output_d(0b00001100);
 break;
 
case 7:
 output_d(0b00001000);
 break;
 
case 8:
 output_d(0b00001001);
 break;
 
}
delay_ms(10);

switch(durum){
 case 1:
 printf(lcd_putc,"\fADIM=%u\nKonum:Ýleri",ADIM);
 break;
 
 case 2:
 printf(lcd_putc,"\fADIM=%u\nKonum:Geri",ADIM);
 break;
 
 case 3:
 printf(lcd_putc,"\fADIM=%u\nKonum:Boþta",ADIM);
 break;
 case 4:
 printf(lcd_putc,"\fADIM=%u\nKonum:Hata",ADIM);
 break;
 
}
delay_ms(10);

if(input(buton_ileri)){
 
 ADIM++;
 durum=1;
 
if(ADIM==9){
 
 ADIM=1;
 durum=1;

}
}

if(input(buton_geri)){
 
 ADIM--;
 durum=2;

if(ADIM==0){

 ADIM=8;
 durum=2;

}
}

if(input(buton_ileri) & input(buton_geri)){
 durum=3;
}

if(!input(buton_ileri) & !input(buton_geri)){
 durum=4;
}

}

}

